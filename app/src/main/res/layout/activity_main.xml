<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Image de fond -->
    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/casino_screen"
        android:scaleType="centerCrop" />

    <!-- Machine à sous -->
    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="65dp"
        android:layout_height="67dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="320dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/slot_machine" />

    <Button
        android:id="@+id/button"
        android:layout_width="181dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView15"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/black"
        android:text="Machine à sous" />

    <!-- BlackJack -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button"
        android:layout_marginTop="-3dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/blackjack" />

    <Button
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_marginTop="-4dp"
        android:backgroundTint="@color/black"
        android:text="BlackJack" />

    <!-- Roulette -->

    <Button
        android:id="@+id/button3"
        android:layout_width="157dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/black"
        android:text="Pyramide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_marginTop="105dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="59dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button"
        android:layout_marginTop="115dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/pyramide" />

</androidx.constraintlayout.widget.ConstraintLayout>
